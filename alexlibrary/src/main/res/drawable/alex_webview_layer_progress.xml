<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#BDBDBD"
                android:startColor="#BDBDBD" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:endColor="#FF7043"
                    android:startColor="#FF7043" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:endColor="#FF7043"
                    android:startColor="#FF7043" />
            </shape>
        </clip>
    </item>

</layer-list>