<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/alex_background_color"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alex_title_height"
        android:background="@color/alex_title_color">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="Mvp RxJava Retrofit OkHttp"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/alex_title_text_size"/>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="登录"/>

            <TextView
                android:id="@+id/tv_add_img"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="添加图片"/>

            <TextView
                android:id="@+id/tv_doubai"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="豆瓣电影"/>

            <TextView
                android:id="@+id/tv_zhihu"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="知乎日报"/>

            <TextView
                android:id="@+id/tv_dialog"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="对话框"/>

            <TextView
                android:id="@+id/tv_float_pager"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="悬浮的翻页"/>

            <TextView
                android:id="@+id/tv_float_layout"
                style="@style/submit_match_red"
                android:layout_marginTop="16dp"
                android:text="悬浮的列表"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
